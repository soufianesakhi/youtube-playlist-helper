{
  "name": "YouTube Playlist Helper",
  "description": "Generate YouTube playlists from various sources (links lists, bookmarks, ...)",
  "version": "2.2.0",
  "manifest_version": 2,
  "icons": {
    "48": "src/icons/icon_48.png",
    "128": "src/icons/icon_128.png"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "YouTube Playlist Helper",
    "browser_style": true,
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "https://www.youtube.com/watch*",
    "https://www.youtube.com/playlist*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{c3d5f138-77cb-461e-b553-f82bf70fecf7}"
    }
  }
}
